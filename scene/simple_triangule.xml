<RT3>
    <lookat look_from="0 10 -10" look_at="0 0 1" up="0 1 0" />
    <camera type="perspective" fovy="65" /> 
    <integrator type="blinn_phong" />

    <film type="image" x_res="600" y_res="400" filename="simple_sphere" img_type="png"/>
     <world_begin/>
        <background type="spheric"/>
        <light_source type="ambient" L="0.1 0.1 0.1" />
        <light_source type="point" L="1 1 1" scale="1 1 1" from="-3 10 0" />

        <material type="blinn" ambient="0.2 0.2 0.2" diffuse="1 0 0" specular="1 0 0" glossiness="256" /> <!-- Red -->
        <object type="sphere" radius=".4" center="0 4 0"/>
        <!-- <object type="sphere" radius="100" center="0 -102 0"/> -->

        <material type="blinn" ambient="0.2 0.2 0.2" diffuse="1 1 0" specular="1 1 0" glossiness="256" /> <!-- Yellow -->
        <object type="triangule" vertices="-4 0 4  4 0 4  4 0 -4"/>
        

    <world_end/>
</RT3>
